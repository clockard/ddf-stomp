		</testResources>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Version>${project.version}</Bundle-Version>
						<Embed-Dependency>stompjms-client,geronimo-jms_1.1_spec,hawtbuf,hawtdispatch,
						hawtdispatch-transport,apollo-selector,geojson-jackson,jackson-annotations,jackson-core,
