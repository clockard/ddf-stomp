						gt-xml,spatial-csw-schema-bindings,spatial-ogc-filter-v_1_1_0-schema,commons-codec,xstream</Embed-Dependency>
						<Import-Package>
							 com.bea.xml.stream;resolution:=optional,
							 com.ctc.wstx.stax;resolution:=optional,
							 javax.security.auth,
							 javax.swing,
							 javax.swing.plaf,
							 javax.xml.datatype,
							 javax.xml.namespace,
							 javax.xml.parsers,
							 javax.xml.stream,
							 javax.xml.transform,
							 javax.xml.transform.sax,
							 javax.xml.transform.stream,
							 net.sf.cglib.proxy;resolution:=optional,
							 nu.xom;resolution:=optional,
							 org.codehaus.jettison;resolution:=optional,
                             
							 org.codehaus.jettison.mapped;resolution:=optional,
                             org.dom4j;resolution:=optional,
                             org.dom4j.io;resolution:=optional,
                             org.dom4j.tree;resolution:=optional,
                             org.jdom;resolution:=optional,
                             org.jdom.input;resolution:=optional,
                             org.jdom2;resolution:=optional,
                             org.jdom2.input;resolution:=optional,
                             org.joda.time;resolution:=optional,
                             org.joda.time.format;resolution:=optional,
                             org.jvnet.jaxb2_commons.lang;resolution:=optional,
                             org.jvnet.jaxb2_commons.locator;resolution:=optional,
                             org.jvnet.jaxb2_commons.locator.util;resolution:=optional,
                             org.kxml2.io;resolution:=optional,
                             org.w3c.dom,
                             org.xml.sax,
                             org.xml.sax.helpers,
                             org.xmlpull.mxp1;resolution:=optional,
                             org.xmlpull.v1;resolution:=optional,
                             sun.misc;resolution:=optional,
                             sun.reflect;resolution:=optional,
                             *
						</Import-Package>
						<Export-Package>
							org.codice.ddf.spatial.ogc.csw.catalog.converter.impl,
							org.codice.pubsub.stomp,
							org.codice.pubsub.server,
							org.codice.ddf.spatial.ogc.catalog.common.converter,
							org.codice.ddf.spatial.ogc.csw.catalog.common,
							org.codice.ddf.spatial.ogc.csw.catalog.converter,
							org.codice.ddf.spatial.ogc.csw.catalog.converter.impl,
							org.codice.ddf.spatial.ogc.csw.catalog.endpoint.mappings,
							org.codice.ddf.spatial.ogc.csw.catalog.endpoint,utils
						</Export-Package>
						<Private-Package>ddf.catalog.plugin.groomer.metacard,ddf.catalog.data.impl</Private-Package>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skip>false</skip>
					<systemPropertyVariables>
						<java.util.logging.config.file><![CDATA[${basedir}/src/test/config/logging/jul.properties]]>
						</java.util.logging.config.file>
						<log4j.configuration><![CDATA[file://${basedir}/src/test/config/logging/log4j.properties]]>
						</log4j.configuration>
					</systemPropertyVariables>
					<forkMode>once</forkMode>
				</configuration>
			</plugin>
		</plugins>
	</build>
